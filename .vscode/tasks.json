{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "java (buildArtifact)",
      "label": "Build JAR",
      "mainClass": "hlml/hlml.launcher.Launcher",
      "targetPath": "${workspaceFolder}/release/${workspaceFolderBasename}.jar",
      "options": { "shell": { "args": ["--enable-preview"] } },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}
